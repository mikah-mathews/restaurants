@{
  Layout = "_Layout";
}

@model Restaurants.Models.Restaurant

<h2>Edit Restaurant</h2>
<h4>Edit this Restaurant: @Html.DisplayFor(model => model.Name)</h4>
@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.RestaurantId)

  @Html.LabelFor(model => model.Name)
  @Html.EditorFor(model => model.Name)

  <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Restaurants", "Index")</p>
<p>@Html.ActionLink("Back to Home", "Index", "Home")</p>